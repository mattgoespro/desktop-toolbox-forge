{
  "include": ["src/**/*.ts", "src/**/*.tsx", "src/renderer/.react-router/types/**/*"],
  "compilerOptions": {
    "module": "nodenext", // required for nodenext moduleResolution
    "target": "es2020",
    "lib": ["es2020", "dom"],
    "moduleResolution": "nodenext",
    "esModuleInterop": true,
    "baseUrl": ".",
    "jsx": "react-jsx",
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "outDir": ".webpack",
    "rootDirs": ["src/main", "src/renderer/app", "src/renderer/.react-router/types/app"],
    "paths": {
      "@main/*": ["src/main/*"],
      "@shared/*": ["src/shared/*"],
      "~/*": ["./*"]
    },
    "sourceMap": true
  }
}
